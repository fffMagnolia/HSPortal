<% provide :title, 'Log in' %>

<div class="flex justify-content-center login-form">
  <%= form_for(:session, url: login_path) do |f| %>
    <%#= render 'partial/error_messages', object: f.object %>
    <div class="field">
      <%= f.label :email, 'メールアドレス' %>
      <%= f.email_field :email %>
    </div>
    <div class="field">
      <%= f.label :password, 'パスワード' %>
      <%= f.password_field :password %>
    </div>
    <p><%= link_to "パスワードを忘れましたか?", new_password_reset_path %></p>
    <ul class="actions">
      <li><%= f.submit 'ログイン', class: 'button' %></li>
    </ul>
    <div>
      <!-- 動いているか怪しいのでテストする -->
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "checkbox" do %>
        <span>次回以降自動でログインする</span>
      <% end %>
      <!-- デザイン変更前
        <div class="right-item col-6">
        <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %><span>次回以降自動でログインする</span>
        <% end %>
       -->
    </div>
  <% end %>
</div>