<!DOCTYPE html>
<html>
  <%= render 'partial/header' %>
  <body>
    <%= render 'partial/navbar' %>

    <section id="banner">
      <!-- flash -->
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <div class="inner">
        <header>
          <h1><%= full_headline(yield :title) %></h1>
        </header>
      </div>
    </section>

    <div class="main"><%= yield %></div>

    <%= render 'partial/footer' %>
  </body>
</html>
