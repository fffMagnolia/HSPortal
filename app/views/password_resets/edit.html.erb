<% provide :title, 'Password reset' %>
<div>
  <div class="container">
    <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
      <div class="row">
        <div class="col-11"><%= render 'parial/error_messages' %></div>

        <%# ユーザのメールアドレス情報をupdate actionに引き継ぐためhiddenで保持 %>
        <%= hidden_field_tag :email, @user.email %>

        <div class="left-item col-6"><%= f.label :password %></div>
        <div class="right-item col-3"><%= f.password_field :password %></div>

        <div class="left-item col-6"><%= f.label :password_confirmation, "Confirmation" %></div>
        <div class="right-item col-3"><%= f.password_field :password_confirmation %></div>

        <div class="left-item col-6"></div>
        <div class="right-item col-3"><%= f.submit 'パスワードを再設定する', class: 'btn btn-primary' %></div>
      </div>
    <% end %>
  </div>
</div>