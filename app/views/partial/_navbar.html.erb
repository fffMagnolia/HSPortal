<!-- Navigation -->
<nav class="navbar navbar-expand-lg navbar-light">
  <%= link_to "HSPortal", root_path, class: "navbar-brand " %>
  <!-- 規程幅以下になった場合の表示 -->
  <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#Navbar" aria-controls="Navbar" aria-expanded="false" aria-label="switch view">
    <span class="navbar-toggler-icon"></span>
  </button>

  <!-- 規程幅以下になった場合はグループ化して表示される -->
  <div class="collapse navbar-collapse" id="Navbar">
    <ul class="navbar-nav ml-auto">
      <li class="nav-item">
        <%= link_to "News", "#", class: "nav-link " %>
      </li>
      <li class="nav-item">
        <%= link_to "Posts", "#", class: "nav-link " %>
      </li>
      <li class="nav-item">
        <%= link_to "Events", events_path , class: "nav-link " %>
      </li>
      <% if logged_in? %>
        <div class="dropdown">
          <!-- ドロップダウンメニューの設定 -->
          <a class="nav-link dropdown-toggle " href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Account</a>
          <!-- ドロップダウンメニューの中身 -->
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <%= link_to "Profile", user_path(current_user), class: "dropdown-item " %>
            <%= link_to "Logout", logout_path, method: :delete, class: "dropdown-item " %>
          </div>
        </div>
      <% else %>
        <%= link_to "Sign up", signup_path, class: "nav-link" %>
        <%= link_to "Login", login_path, class: "nav-link" %>
      <% end %>
    </ul>
  </div>
</nav>