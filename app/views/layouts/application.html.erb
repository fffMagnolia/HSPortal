<!DOCTYPE html>
<html>
  <%= render 'shard/header' %>
  <body class="">
    <%= render 'shard/navbar' %>

    <h1 class="title text-center"><%= full_headline(yield :title) %></h1>
    <!-- エラー等はここに表示される -->
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>

    <%= yield %>

    <div><%= render 'shard/footer' %></div>
  </body>
</html>
